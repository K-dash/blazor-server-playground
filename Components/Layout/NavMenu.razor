<RadzenLayout>
    <RadzenHeader>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
            <RadzenSidebarToggle Click="@(() => sidebarExpanded = !sidebarExpanded)" />
            <RadzenLabel Text="blazor-playground" />
        </RadzenStack>
    </RadzenHeader>

    <RadzenStack Orientation="Orientation.Vertical">
        <RadzenSidebar @bind-Expanded="@sidebarExpanded">
            <RadzenPanelMenu>
                <RadzenPanelMenuItem Text="Home" Icon="home" Path="" />
                <RadzenPanelMenuItem Text="Counter" Icon="add_box" Path="counter" />
                <RadzenPanelMenuItem Text="Weather" Icon="list" Path="weather" />
                <RadzenPanelMenuItem Text="BizA" Icon="list" Path="biza/editauthor/123" />
            </RadzenPanelMenu>
        </RadzenSidebar>
    </RadzenStack>

    @* <RadzenBody>
        <RadzenContentContainer Name="main">
            @Body
        </RadzenContentContainer>
    </RadzenBody> *@
</RadzenLayout>

@code {
    bool sidebarExpanded = true;
}
